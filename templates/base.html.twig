<!DOCTYPE html>
<html lang="fr">
    <head>
         {% block meta %}
            <meta charset="UTF-8">
            <meta name="description" content="{% block metadescription %}{% endblock %}">
            <meta name="keywords" content="{% block keywords %}{% endblock %}">
            <meta name="robots" content="{% block robots %}{% endblock %}">   
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <meta name="author" content="Garage 2JC">
            <meta property="og:title" content="{% block og_title %}Réparation Auto Toutes Marques | Garage 2JC Auto{% endblock %}">
            <meta property="og:description" content="{% block og_description %}Confiez votre véhicule au Garage 2JC Auto : entretien, réparation et diagnostics auto professionnels. Service rapide et fiable à prix juste.{% endblock %}">
            {# <meta property="og:image" content="{% block og_image %}{% endblock %}"> #}
            <meta name="twitter:title" content="{% block twitter_title %}Garage 2JC Auto – Réparation et Entretien Auto Toutes Marques{% endblock %}">
            <meta name="twitter:description" content="{% block twitter_description %}Réparations mécaniques, vidanges, freins, pneus, climatisation… Faites confiance au Garage 2JC Auto pour un service auto de qualité.{% endblock %}">
            {# <meta name="twitter:image" content="{% block twitter_image %}{% endblock %}"> #}
        {% endblock %}
       

        <title>{% block title %}{% endblock %}</title>

        <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,%3Csvg%20xmlns='http://www.w3.org/2000/svg'%20viewBox='0%200%20128%20128'%3E%3Ctext%20y='1.2em'%20font-size='96'%3E%E2%9A%AB%EF%B8%8F%3C/text%3E%3Ctext%20y='1.3em'%20x='0.2em'%20font-size='76'%20fill='%23fff'%3Esf%3C/text%3E%3C/svg%3E">        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        {% block importmap %}{% endblock %}
        {% endblock %}
    </head>
    <body id="wrapper">    
        <div id="mainpage">
            {% for label, messages in app.flashes %}
                {% set alertClass = (label == 'error') ? 'danger' : label %}
                {% for message in messages %}
                    <div class="alert alert-{{ alertClass }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            <header>
                {% block nav %}{% endblock %}
            </header>
            {% block body %}{% endblock %}
        </div>
        <footer>
            {{ include('components/_footer.html.twig') }}
        </footer>
    </body>
</html>
