{% extends 'base.html.twig' %}

{% block robots %}noindex, nofollow{% endblock %}

{% block nav %}{{ include('components/_nav_bar_aside.html.twig') }}{% endblock %}

{% block title %}Gestion des rendez-vous{% endblock %}

{% block body %}   
<main class="main-admin">
    <h1>Liste des rendez-vous</h1>
    {% if rdvEnCours %}
        <h2>Rendez-vous en attente</h2>
        <table class="table table-striped">
            <thead>
                <tr class="table-warning">
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Date du rendez-vous</th>
                    <th scope="col">Prestation</th>
                    <th scope="col">Gérer le rdv</th>
                </tr>
            </thead>
            <tbody>
            {% for rdv in rdvEnCours %}
            <tr>
                <th scope="row">{{ rdv.id }}</th>
                <td>{{ rdv.nom }} {{ rdv.prenom }}</td>
                <td>{{ rdv.dateRdv|date('d/m/Y à H:i') }}</td>
                <td>{{ rdv.prestation.nomPrestation }}</td>
                <td><a href="{{ path('show_rdv', {'id': rdv.id}) }}">Voir détail</a> <i class="fa-solid fa-file-pen"></i></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun rendez-vous en attente.</p>
    {% endif %}
    {% if rdvConfirmer is not empty %}
        <h2>Rendez-vous traîtés à venir</h2>
            <table class="table table-striped">
                <thead>
                    <tr class="table-success">
                        <th scope="col">#</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Date du rendez-vous</th>
                        <th scope="col">Prestation</th>
                        <th scope="col">Gérer le rdv</th>
                    </tr>
                </thead>
                <tbody>
                {% for rdv in rdvConfirmer %}
                <tr>
                    <th scope="row">{{ rdv.id }}</th>
                    <td>{{ rdv.nom }} {{ rdv.prenom }}</td>
                    <td>{{ rdv.dateRdv|date('d/m/Y à H:i') }}</td>
                    <td>{{ rdv.prestation.nomPrestation }}</td>
                    <td><a href="{{ path('show_rdv', {'id': rdv.id}) }}">Voir détail</a></td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
    {% else %}
        <h2>Aucun rendez-vous à venir.</h2>
    {% endif %}
</main>
{% endblock %}
