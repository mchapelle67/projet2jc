{% extends 'base.html.twig' %}

{% block title %}Devis archivés{% endblock %}

{% block body %}
{% for label, messages in app.flashes %}
    {% set alertClass = (label == 'error') ? 'danger' : label %}
    {% for message in messages %}
        <div class="alert alert-{{ alertClass }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

    <h1>Devis archivés</h1>

    <h2>Liste des devis archivés</h2>
    {% for devis in devisArchives %}
        <p>Devis n° {{ devis.id }} </p>
        <p>Client: {{ devis.nom }} {{ devis.prenom }}</p>
        <p>Date de la demande: {{ devis.dateDevis|date('d/m/Y à H:i') }}</p>
        <p><a href="{{ path('gestion_devis', {'id': devis.id}) }}">Voir le devis</a></p><br>
    {% else %}
        <p>Aucun devis en cours.</p>
    {% endfor %}

    <button><a href="{{ path('app_admin_devis') }}">Voir les devis en cours</a></button>
{% endblock %}
