{% extends 'base.html.twig' %}

{% block metadescription %}Besoin d’un renseignement ? Contactez le Garage 2JC à Altkirch pour vos réparations, entretiens auto et conseils mécaniques.{% endblock %}
{% block keywords %}contact garage Altkirch, informations{% endblock %}
{% block robots %}index, follow{% endblock %}

{% block title %}Contactez Garage 2JC à Altkirch – Réparation, Entretien, Devis{% endblock %}

{% block nav %}{{ include('components/_nav_bar.html.twig') }}{% endblock %}
{% block footer %}{{ include('components/_footer.html.twig') }}{% endblock %}

{% block body %}
<main class="main-home">
    <section class="hero-secondaire">
        <div class="hero-overlay-secondaire">
            <div class="hero-content-secondaire">
                {% for label, messages in app.flashes %}
                {% set alertClass = (label == 'error') ? 'danger' : label %}
                    {% for message in messages %}
                        <div class="alert alert-{{ alertClass }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                <h1>Nous contacter</h1>
                <h2>Besoin d’un renseignement ? Nous sommes à votre écoute.</h2>
            </div> 
        </div>
    </section>    
    <section class="form form-contact">
        <div class="form-container contact">
            {{ form_start(contactForm, {'attr': {'id': 'contact_form'}}) }}
            <div class="form-step active">
                <div class="col">
                    {{ form_row(contactForm.nom, {'row_attr': {'class': 'form-group'}}) }}
                    {{ form_row(contactForm.prenom, {'row_attr': {'class': 'form-group'}}) }}
                </div>
                    {{ form_row(contactForm.email, {'row_attr': {'class': 'form-group'}}) }}
                    {{ form_row(contactForm.tel, {'row_attr': {'class': 'form-group'}}) }}
                <div class="col mb-3">
                    {{ form_row(contactForm.text, {'row_attr': {'class': 'form-group text'}}) }}
                </div>
                    <p class="champs-obligatoires contact">* champs obligatoires</p>
                        <span style="margin-top: 1em;" class="consentement">{{ form_row(contactForm.consentement) }}J'accepte que mes données soient utilisées pour le traitement de ma demande de rendez-vous.*</span>
                    {{ form_row(contactForm.submit, {'row_attr': {'class': 'form-group'}}) }}
            </div>
            {{ form_end(contactForm) }}
        </div>
    </section>
</main>
{% endblock %}