{% extends 'base.html.twig' %}

{% block title %}Modifier une voiture d'occasion{% endblock %}

{% block body %}
    <h1>Modifier vehicule</h1>
    <div class="voiture-list-form">
        {{ form(form)}}
        {% if photos %}
         <div class="photo-preview">
            {% for photo in photos %}
                <p>Photos actuelles :</p>
                <div class="photo-item">
                    <img src="{{ asset('uploads/vo/' ~ photo.img) }}" alt="Photo" style="max-width:150px;">
                    <a href="{{ path('delete_photo_vo', {'voId': vehicule.id, 'photoId': photo.id}) }}">Supprimer</a>
                </div>
            {% endfor %}
         </div>
    </div>
{% else %}
    <p>Aucune photo actuellement</p>
{% endif %}

    </div>
{% endblock %}
